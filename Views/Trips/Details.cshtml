@model PRN211_Project_Group_4.Models.Trip

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Trip</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Slot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Slot)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status == true)
            {
                <span>Avaiable</span>
            }
            else if (Model.Status == false)
            {
                <span>Sold out</span>
            }
            else
            {
                <span>No information</span>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Route)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Route
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Train)
        </dt>
    
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Train.Name)
        </dd>
    </dl>
    @foreach(Wagon wag in Model.Train.Wagons)
    {
        <h6>@wag.Name</h6>

    }

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TripId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
